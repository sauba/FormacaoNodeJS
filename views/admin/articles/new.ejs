<!DOCTYPE html>

<%- include ('../../partials/header.ejs') %>

<div class="container" style="margin-top: 2%;">
    <div class="card" style="border: none;">
        <div class="card-header bg-success text-white">
            <h2 style="text-align: center; letter-spacing: 0.2em;">Novo artigo</h2>
        </div>

        <div class="card-body">
            <form action="/articles/save" method="POST">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
                <textarea class="form-control" name="body" id="article" placeholder="Escreva o artigo aqui!"></textarea>
                
                <div style="display: flex; justify-content: space-between; margin-top: 2%;">
                    <label class="col-md-1" for="category" style="font-weight: bold;">SETOR</label>
                    <select class="form-control mr-auto" name="category" id="category">
                        <% categories.forEach((category) =>{ %>
                            <option style="letter-spacing: 0.1em; font-weight: bold; margin-top: 4%;" value="<%= category.id %>"> <%= category.title %> </option>
                        <% }) %>
                    </select>
                </div>
                <button class="btn btn-success" style="margin-top: 2%; font-weight: bold; letter-spacing: 0.1em;">CADASTRAR</button>
            </form>
        </div>

    </div>
</div>
<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    console.log(tinymce);
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        branding: false,
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>